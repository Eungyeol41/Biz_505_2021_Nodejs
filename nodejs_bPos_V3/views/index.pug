extends layout

block content
	script(src="/js/table.js")
	style.
		section.main {
			display: flex;
			flex-wrap: wrap;

			justify-content: center;
			align-items: center;
		}

		div.table {
			width: 200px;
			height: 100px;
			border: 1px solid;
			margin: 10px auto;
			border-radius: 5px;

			text-align: center;
			line-height: 100px;

			background-color: darkolivegreen;
			color: white;
			font-size: 20px;

			cursor: pointer;
		}

		div.table:hover {
			box-shadow: 2px 2px 2px black;
		}

		div.order_yes {
			background-color: darkcyan;
		}

	each table, index in TABLES
		if(table.order_count > 0)
			div.table.order_yes(data-table_id= table.id) !{table.table_name}
				span ( !{table.order_count} )
		
		else
			div.table(data-table_id= table.id) !{table.table_name}