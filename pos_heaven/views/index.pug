extends layout

block content
	style.
		section.main {
			display: flex;
			flex-wrap: wrap;
			justify-content: center;
			align-items: center;
		}

		div.table {
			width: 200px;
			height: 100px;
			border: 1px solid black;
			margin: 10px auto;
			border-radius: 5px;

			text-align: center;
			line-height: 100px;

			font-size: 20px;

			cursor: pointer;
		}

		div.table:hover {
			box-shadow: 2px 2px 2px black;
		}
	
	each vo, index in TABLE
		if(table_order_count > 0)
			div.table.order_in(data-table_id= table_id) !{table.table_name}
				span (식사 중)
		
		else
			div.table(data-table_id= table_id) !{table.table_name}
	
	script.
		document.querySelector("div.table").addEventListener("click", (e) => {
			const table_id = e.target.dataset.table_id;
			alert(table_id)

			document.location.href = `/pos/order/${table_id}`
		})