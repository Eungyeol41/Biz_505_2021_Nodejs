extends layout

block content
	style.
		section.main {
			display: flex;
			flex-wrap: wrap;
			justify-content: center;
			align-items: center;
		}

		div.table {
			width: 200px;
			height: 100px;
			border: 1px solid black;
			margin: 10px auto;
			border-radius: 5px;

			text-align: center;
			line-height: 100px;

			font-size: 20px;

			cursor: pointer;
		}

		div.table:hover {
			box-shadow: 2px 2px 2px black;
		}

	-for(let i = 0; i < 12; i++)
		div.table !{i + 1}번 테이블
	
