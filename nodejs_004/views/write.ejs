<!DOCTYPE html>
<html lang="ko">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/stylesheets/write.css" />
    <title>Write</title>
  </head>
  <body>
    <form method="POST">
      <div>
        <label>작성자</label>
        <input name="b_writer" id="b_writer" type="text" />
      </div>
      <div>
        <label>작성일자</label>
        <input name="b_date" id="b_date" type="text" />
      </div>
      <div>
        <label>작성시각</label>
        <input name="b_time" id="b_time" type="text" />
      </div>
      <div>
        <label>제목</label>
        <input name="b_subject" id="b_subject" type="text" />
      </div>
      <div>
        <label>내용</label>
        <textarea name="b_text" id="b_text" cols="30" rows="5"></textarea>
      </div>
      <button class="btn_save">저장</button>
    </form>
  </body>
  <script>
    document.querySelector("button.btn_save").addEventListener("click", () => {
      document.location.href = "/";
    });
  </script>
</html>
